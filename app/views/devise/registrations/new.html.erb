<div class="min-h-screen flex items-center justify-center bg-black">
  <div class="bg-gray-900 p-12 rounded-lg shadow-lg max-w-2xl w-full">
    <h2 class="text-3xl font-bold italic text-center text-white mb-8">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="mb-5">
        <%= f.label :email, class: "text-white text-lg" %>
        <%= f.email_field :email, class: "w-full p-3 bg-gray-800 text-white rounded-md text-lg" %>
      </div>

      <div class="mb-5">
        <%= f.label :password, class: "text-white text-lg" %>
        <%= f.password_field :password, class: "w-full p-3 bg-gray-800 text-white rounded-md text-lg" %>
      </div>

      <div class="mb-5">
        <%= f.label :password_confirmation, class: "text-white text-lg" %>
        <%= f.password_field :password_confirmation, class: "w-full p-3 bg-gray-800 text-white rounded-md text-lg" %>
      </div>

      <div class="text-center">
        <%= f.submit "Sign Up", class: "bg-blue-600 px-6 py-3 rounded-md hover:bg-blue-500 transition w-full text-lg font-semibold" %>
      </div>
    <% end %>

    <div class="text-center mt-6 text-gray-400 text-lg">
      Already have an account? <%= link_to "Log in", new_user_session_path, class: "text-blue-400 hover:text-blue-300" %>
    </div>
  </div>
</div>

<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Book Lending Library" %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="turbo-visit-control" content="reload">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <!-- Ensure rails-ujs is loaded for DELETE method -->
    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body class="bg-black text-white">
    <main class="w-full min-h-screen">
      <%= yield %>
    </main>

    <!-- Auto-clear session on logout -->
    <script>
      document.addEventListener("turbo:load", function() {
        const logoutLinks = document.querySelectorAll("a[data-method='delete']");
        logoutLinks.forEach(link => {
          link.addEventListener("click", () => {
            setTimeout(() => {
              fetch("<%= destroy_user_session_path %>", { method: "DELETE", credentials: "same-origin" })
                .then(() => {
                  window.location.href = "<%= new_user_session_path %>"; // Redirect to login page
                });
            }, 200);
          });
        });
      });
    </script>
  </body>
</html>
